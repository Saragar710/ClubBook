<!-- Loop over each object in the clubs array -->
{{#each clubs as |club| }}
<div class="row mb-4 club">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/club/{{club.id}}">{{club.name}}</a>
    </h2>
    
    <p>Created by {{club.user.name}} on {{format_date club.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{club.description}}
    </p>
  </div>
</div>
{{/each}}
